<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="text-center mt-5 mb-3"><%= t('.title') %></h2>
        <%= form_with model: @user, url: signup_path do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="input-wrapper mb-4">
            <i class="fas fa-user input-icon"></i>
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control rounded-pill form-control-with-icon' %>
          </div>
          <div class="input-wrapper mb-4">
            <i class="fa-solid fa-envelope input-icon"></i>
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control rounded-pill form-control-with-icon' %>
          </div>
          <div class="input-wrapper mb-4">
            <i class="fa-solid fa-unlock-keyhole input-icon"></i>
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password, class: 'form-control rounded-pill form-control-with-icon' %>
          </div>
          <div class="input-wrapper mb-4">
            <i class="fa-solid fa-unlock-keyhole input-icon"></i>
            <%= f.label :password_confirmation, class: 'form-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control rounded-pill form-control-with-icon' %>
          </div>
          <div class="text-center pt-3">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
          <div class="text-center mt-4">
            <%= link_to (t '.have_account'), login_path %>
          </div>
        <% end %>
    </div>
  </div>
</div>
