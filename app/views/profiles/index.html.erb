<div class="container mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mt-5 mb-4 text-border"><%= (t '.title') %></h1>
      <div class="card profile-card">
        <div class="card-body mt-3 ms-4">
          <div class="form-group">
            <p class="text-border fs-4 mb-1"><%= User.human_attribute_name(:name) %><br><p class="fs-5 no-font"><%= current_user.name %></p></p>
          </div>
          <div class="form-group mt-4">
            <p class="text-border fs-4 mb-1"><%= User.human_attribute_name(:email) %><br><p class="fs-5 no-font"><%= current_user.email %></p></p>
          </div>
          <div class="text-center">
            <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" }, class: "btn btn-danger my-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

