<div class="container mb-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mt-5 mb-4 text-border"><%= (t '.title') %></h1>
      <div class="card profile-card">
        <div class="card-body my-3 ms-4">    
          <div class="form-group">
            <div class="d-flex justify-content-between">
              <p class="text-border fs-4 mb-1"><%= User.human_attribute_name(:name) %></p>
              <%= link_to "Edit", edit_profile_path, class: "btn btn-success me-3", data: { turbo_frame: "modal" } %>
            </div>
            <p class="fs-5 no-font" id="user-name"><%= current_user.name %></p>
          </div>

          <div class="form-group mt-3">
            <p class="text-border fs-4 mb-1"><%= User.human_attribute_name(:email) %><br>
              <p class="fs-5 no-font"><%= current_user.email %></p>
            </p>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-4 mb-3">
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
          <%= (t 'defaults.logout') %>
        </button>
      </div>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body mt-2">
              <p class="ms-3 text-border fs-5"><%= (t 'defaults.logout_message')%></p>
            </div>
            <div class="modal-footer rounded-bottom dlt" data-bs-dismiss="modal">
              <%= link_to 'YES', logout_path, class: "btn btn-danger btn-sm", data: { turbo_method: :delete } %>
              <%= link_to 'No', '#', class: "btn btn-secondary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
