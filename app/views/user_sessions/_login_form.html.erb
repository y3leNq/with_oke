<%= turbo_frame_tag 'form' do %>
  <%= form_with url: login_path, class: "col-10 offset-1" do |f| %>
    <div class="text-center">
      <%= link_to auth_at_provider_path(provider: :google), class: "btn btn-danger rounded text-white mt-3", data: { turbo_frame: "_top" } do %>
        <i class="fa-brands fa-google-plus-g me-2"></i>Sign in with Google
      <% end %>
    </div>
    <div class="line-separator mt-4">
      <div class="separator-text fs-5">or</div>
    </div>
    <div class="col-10 offset-1">
      <div class="input-wrapper mt-4">
        <i class="fa-solid fa-envelope input-icon"></i>
        <%= f.label :email, User.human_attribute_name(:email), class: 'form-label text-border fs-5' %>
        <%= f.email_field :email, class: 'form-control rounded-pill form-control-with-icon' %>
      </div>
      <div class="input-wrapper my-4">
        <i class="fa-solid fa-unlock-keyhole input-icon"></i>
        <%= f.label :password, User.human_attribute_name(:password), class: 'form-label text-border fs-5' %>
        <%= f.password_field :password, class: 'form-control rounded-pill form-control-with-icon' %>
      </div>
      <div>
        <%= check_box_tag :remember_me, params[:remember], true %>
        <%= label_tag :remember_me, (t '.remember_me'), class: "text-border fs-5" %>
      </div>
      <div class="d-flex justify-content-end my-3">
        <%= link_to (t 'defaults.forgot_password'), new_password_reset_path, data: { turbo_frame: "_top" }, class: "fs-5 custom-link" %>
      </div>
      <div class="text-center my-4">
        <%= f.submit 'Sign in', class: 'btn btn-primary', data: { turbo_frame: "_top" } %>
      </div>
    </div>
  <% end %>
<% end %>
