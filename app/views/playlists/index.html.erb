<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="text-center my-5"><%= t('.title') %></h2>

      <div class="d-flex justify-content-end">
        <%= link_to t('.btn'), new_playlist_path, class: "btn btn-outline-success", data: { turbo_frame: dom_id(Playlist.new) } %>
      </div>

      <%= turbo_frame_tag Playlist.new %>

      <% if @playlists.present? %>
        <div id="playlists">
          <%= render @playlists %>
        </div>
      <% else %>
        <p class="text-center pt-5">
          <%= t('.no_result') %>
        </p>
      <% end %>

    </div>
  </div>
</div>
