<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="text-center my-5"><%= t('.title') %></h2>

      <div class="d-flex justify-content-end">
        <%= link_to t('.btn'), new_playlist_path, class: "btn btn-outline-success", data: { turbo_frame: "modal" }  %>
      </div>

      <div id="playlists">
        <%= render @playlists %>
        <p class="text-center pt-5" id="no-result">
          <% unless @playlists.present? %>
            <%= t('defaults.no_playlist') %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
