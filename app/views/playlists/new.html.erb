<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="text-center my-5"><%= t('.title') %></h2>
      <p class="text-center mb-5"><%= (t '.description') %></p>
      <%= form_with model: @playlist, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="input-wrapper my-3">
          <i class="fa fa-list input-icon"></i>
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control rounded-pill form-control-with-icon' %>
        </div>
        <div class="text-center pt-3">
          <%= f.submit (t '.btn'), class: 'btn btn-primary actions' %>
        </div>
      <% end %>
    </div>
  </div>
</div>