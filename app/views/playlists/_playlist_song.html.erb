<ol class="list-group mt-2">
  <li class="list-group-item align-items-start">
    <div>
      <h4 class="mt-3">
        <%= song.title %>
      </h4>
      <p>
        <%= song.artist %>
      </p>
      <div class="position-absolute bottom-0 end-0 mb-2 me-2">
        <%= link_to (t 'defaults.edit'), edit_song_path(song), class: "btn btn-success btn-sm" %>
        <%= link_to (t 'defaults.destroy'), song_path(song), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: (t 'defaults.delete_message') } %>
      </div>
    </div>
  </li>
</ol>