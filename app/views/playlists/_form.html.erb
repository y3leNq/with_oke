<%= bootstrap_form_with(model: @playlist, data: { action: "turbo:submit-end->modal#close" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mt-4">
    <%= f.text_field :name, placeholder: (t 'defaults.placeholder_artist') %>
  </div>
  <div class="text-center my-4">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
