<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal_<%= id %>">
  <%= (t 'defaults.destroy')%>
</button>

<div class="modal fade" id="exampleModal_<%= id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body mt-2">
        <p class="ms-3 text-border fs-5"><%= (t 'defaults.delete_message')%></p>
      </div>
      <div class="modal-footer rounded-bottom" data-bs-dismiss="modal">
        <%= link_to 'YES', url, class: "btn btn-danger btn-sm", data: { turbo_method: :delete } %>
        <%= link_to 'No', '#', class: "btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>